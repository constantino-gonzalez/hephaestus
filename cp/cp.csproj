<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net7.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
  </PropertyGroup>

  <ItemGroup>
      <PackageReference Include="Microsoft.PowerShell.Commands.Diagnostics" Version="7.3.12" />
      <PackageReference Include="Microsoft.PowerShell.Commands.Management" Version="7.3.12" />
      <PackageReference Include="Microsoft.PowerShell.Commands.Utility" Version="7.3.12" />
      <PackageReference Include="Microsoft.PowerShell.ConsoleHost" Version="7.3.12" />
      <PackageReference Include="Microsoft.WSMan.Management" Version="7.3.12" />
      <PackageReference Include="System.Management.Automation" Version="7.3.12" />
  </ItemGroup>

  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="copy $(ProjectDir)\Models\ServerModel.cs $(ProjectDir)..\servachok\ServerModel.cs" />
  </Target>
</Project>
